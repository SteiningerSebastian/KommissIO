<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lang="clr-namespace:MauiClient.Resources.Localizations"
             xmlns:viewmodel="clr-namespace:MauiClientLibrary.ViewModels;assembly=MauiClientLibrary"
             x:DataType="viewmodel:LoginViewModel"
             x:Class="MauiClient.Views.LoginPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="50"
            Spacing="25">

            <Label Text="KommisIO" 
                   HorizontalOptions="CenterAndExpand" 
                   Style="{StaticResource Headline}"
            />

            <Label Text="{x:Static lang:AppResources.LoginIntro}" 
                   HorizontalOptions="CenterAndExpand" 
                   Style="{StaticResource SubHeadline}" 
            />

            <Entry Placeholder="{x:Static lang:AppResources.PersonnelNumber}" 
                   Text="{Binding PersonnelNumber}"/>

            <Entry Placeholder="{x:Static lang:AppResources.Password}" 
                   IsPassword="True" 
                   Text="{Binding Password}"/>

            <Button Text="{x:Static lang:AppResources.Login}" 
                    IsEnabled="{Binding IsNotBusy}"
                    Command="{Binding LoginCommand}"
            />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>