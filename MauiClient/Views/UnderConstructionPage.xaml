<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiClient.Views.UnderConstructionPage"
             Title="Under Construction">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" HorizontalOptions="Center">
            <Label Text="This site is under construction"
                   TextColor="DarkRed"
                     FontSize="Large"
                   FontAttributes="Bold"
                   Margin="50"/>
            <Label Text="You are welcome to use the existing functions"
                   FontSize="Medium"
                   TextColor="DarkBlue" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>